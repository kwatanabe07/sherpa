.static-content
  .lp-content
    body
      line-height 1
    ul
      list-style none
    blockquote, q
      quotes none
      &::before, &::after
        content ''
        content none
    a
      background transparent
      font-size 100%
      margin 0
      padding 0
      vertical-align baseline
      text-decoration none
    img
      max-width 100%
      vertical-align bottom
    table
      border-collapse collapse
      border-spacing 0
    sub, sup
      font-size 70%

    .only-pc
      display block
    .only-sp
      display none

    .c-text
      font-size 16px
      letter-spacing 0.075em
      line-height 1.9
      color #000
      text-align justify
      +cnt()
        font-size vwCnt(16)
      +sp()
        font-size vwsp(28)
        line-height 1.8
      a
        text-decoration underline
        &:hover
          text-decoration none

section[id*="sherpa_"]
  h2,
  p
    color #392720

#sherpa_mvArea
  .mv
    width 100%
    position relative
    .mvImage
      opacity: 0
      transform scale(1.1)
      transition opacity .5s,transform .5s
      &.active
        opacity: 10
        transform scale(1)
    .title
      width vwpc(283)
      position absolute
      top 50%
      left 50%
      opacity: 0
      transform translate(-50%,-30%)
      transition opacity .5s,transform .5s
      +sp()
        width vwsp(639)
        top inherit
        bottom vwsp(80)
        transform translate(-50%,30%)
      &.active
        opacity: 10
        transform translate(-50%,-50%)
        +sp()
          transform translate(-50%,0)
    img
      width 100%
      p
        font-size: 24px;
        text-align center
        +sp()
          font-size: vwsp(36);
  .leadArea
    padding 0 vwsp(40)
    .leadTitle
      font-size: 28px;
      line-height: 1.3;
      margin 60px 0 40px
      text-align center
      +cnt()
        font-size: vwCnt(28);
        margin vwCnt(60) 0 vwCnt(40)
      +sp()
        font-size: vwsp(36);
        margin vwsp(80) 0 vwsp(55)
    .text_desc
      font-size: 14px;
      font-weight bold
      line-height: 2.1;
      margin-bottom: 100px
      text-align: center;
      +sp()
        font-size: vwsp(24);
        margin-bottom vwsp(95)
        text-align justify

#sherpa_itemsArea
  *
    box-sizing border-box
  .itemBlock
    display flex
    justify-content center
    margin-bottom 150px
    +cnt()
      margin-bottom vwCnt(150)
    +sp()
      display block
      margin-bottom vwsp(150)
    &.reverse
      flex-direction: row-reverse
      .itemBlockInner
        margin-right: 0
        margin-left: 85px
        +cnt()
          margin-left vwCnt(85)
        +sp()
          margin-left 0
    .itemBlockInner
      margin-right: 85px
      position relative
      opacity 0
      transition opacity .5s
      &.active
        opacity 10
        &:after
          top 30px
          right -30px
          +sp()
            top vwsp(42)
            right 0
      +cnt()
        margin-right: vwCnt(85)
      +sp()
        margin-right: 0
      &:after
        display block
        content ""
        width 520px
        height 520px
        background url('../image/bg_items.png') no-repeat
        background-size 100%
        position absolute
        top 0
        right 0
        z-index 0
        transition top .5s,right .5s
        +cnt()
          width vwCnt(520)
          height vwCnt(520)
          top vwCnt(30)
          right vwCnt(-30)
        +sp()
          width vwsp(708)
          height vwsp(708)
          top vwsp(0)
          right vwsp(42)
    .swiper-container
      width 520px
      position relative
      +cnt()
        width vwCnt(520)
      +sp()
        width vwsp(708)
        margin-bottom vwsp(80)
      .swiper-pagination
        position absolute
        bottom 10px
        right 0
        +sp()
          bottom vwsp(24)
        .swiper-pagination-bullet
          width 10px
          height 10px
          background: #fff
          opacity: 10
          +sp()
            width vwsp(20)
            height vwsp(20)
            min-width 10px
            min-height 10px
          &-active
            background: #d1a87d
          &:not(:last-of-type)
            margin-right 30px
    .textFrame
      width 440px
      position relative
      opacity 0
      transition opacity .5s
      &.active
        opacity 10
      +cnt()
        width vwCnt(440)
      +sp()
        width 100%
        padding 0 vwsp(40)
      .textFrameInner
        width 100%
        h3,p,span
          color #3f3531
          font-weight: bold;
        .gender
          display flex
          align-content center
          justify-content center
          width 60px
          border 2px solid #3f3531
          font-size: 16px;
          font-family: "Interstate";
          margin-bottom 30px
          padding 4px 12px
          +sp()
            width vwsp(95)
            border vwsp(4) solid #3f3531
            font-size vwsp(26)
            margin-bottom vwsp(40)
            padding vwsp(6) vwsp(9)
          &.women
            width 85px
            +sp()
              width vwsp(135)
        .name
          font-size: 30px;
          line-height: 1.5;
          margin-bottom 15px
          +cnt()
            font-size: vwCnt(30);
            margin-bottom vwCnt(15)
          +sp()
            font-size: vwsp(40);
            margin-bottom 0
        .price
          font-size: 18px;
          line-height: 1
          +cnt()
            font-size: vwCnt(18);
          +sp()
            font-size: vwsp(28);
            margin-top vwsp(35)
          span
            font-size 14px
            +cnt()
              font-size: vwCnt(14);
            +sp()
              font-size: vwsp(20);
        .descBlock
          display flex
          flex-direction column
          justify-content space-between
          .desc
            border-top 2px solid #554843
            font-size: 14px;
            line-height: 1.7;
            margin 25px 0 40px
            padding-top 25px
            +cnt()
              font-size: vwCnt(14);
              margin vwCnt(25) 0 vwCnt(40)
              padding-top vwCnt(20)
            +sp()
              border-top vwsp(3) solid #554843
              font-size: vwsp(24);
              line-height: 2;
              margin vwsp(40) 0
              padding-top vwsp(40)
              word-break: break-all;
          .checkButton
            height 60px
            background #d1a87d
            text-align center
            position relative
            transition .5s
            overflow-x hidden
            +cnt()
              height vwCnt(60)
            +sp()
              height vwsp(90)
              overflow-x visible
            &:hover
              &:before
                opacity: 1;
                transform: scale(1, 1);
            &:before
              display block
              content ""
              width 100%
              height 100%
              opacity: 0;
              background: Rgba(251,246,231,.3);
              transform: scale(0.1, 0.1);
              transition: opacity .5s,transform .5s
              position absolute
              top 0
              left 0
            &:after
              display block
              width 10px
              height 16px
              content ""
              background url('../image/button_arrow.png') no-repeat
              background-size 100%
              background-position center
              position absolute
              top 50%
              transform translateY(-50%)
              right 16px
              +cnt()
                width vwCnt(10)
                height vwCnt(16)
                right vwCnt(16)
              +sp()
                width vwsp(18)
                height vwsp(28)
                background url('../image/button_arrow_sp.png') no-repeat
                background-size 100%
            a
              display flex
              align-items center
              justify-content center
              width 100%
              height 100%
              color #fff
              font-family: Interstate-Regular,sans-serif
              font-size: 16px;
              font-weight bold
              position relative
              z-index 1
              +cnt()
                font-size vwCnt(16)
              +sp()
                font-size vwsp(28)
              img
                width 55px
                +sp()
                  width vwsp(93)
#sherpa_allItemsArea
  margin: 185px 0 120px
  +cnt()
    margin: vwCnt(185) 0 vwCnt(120)
  +sp()
    margin: vwsp(200) 0 vwsp(120)
    padding 0 vwsp(40)
  .allItems_heading
    color #392720
    font-size 40px
    font-family: Interstate-Regular,sans-serif
    margin-bottom 60px
    text-align center
    +cnt()
      font-size vwCnt(40)
      margin-bottom vwCnt(60)
    +sp()
      font-size vwsp(54)
      margin-bottom vwsp(80)
  .checkButtonsInner
