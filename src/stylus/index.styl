        left 0
      &:after
        display block
        width 10px
        height 16px
        content ""
        background url('../image/button_arrow.png') no-repeat
        background-size 100%
        background-position center
        position absolute
        top 50%
        transform translateY(-50%)
        right 16px
        +cnt()
          width vwCnt(10)
          height vwCnt(16)
          right vwCnt(16)
        +sp()
          width vwsp(18)
          height vwsp(28)
          background url('../image/button_arrow_sp.png') no-repeat
          background-size 100%
      a
        display flex
        align-items center
        justify-content center
        width 100%
        height 100%
        color #fff
        font-family: Interstate-Regular,sans-serif
        font-size: 16px;
        font-weight bold
        position relative
        z-index 1
        +cnt()
          font-size vwCnt(16)
        +sp()
          font-size vwsp(28)
        img
          width 55px
          +sp()
            width vwsp(93)

@media screen and (max-width: 768px)

  .static-content
    .lp-content
      img
        width 100%
      .only-pc
        display none
      .only-sp
        display block



